<div class="body-heading mb-5">
  <h1>Dashboard</h1>
</div>
<div class="container container-fluid align-center">
<div class="row justify-center">
  <div class="col-md-6">
    <h2>Create a new blog</h2>

    <form class="form create-form" id="{{user_id}}">
      <div class="form-group">
       <input class="form-input" placeholder="Blog Title" id="blog-title" type="text"/>
      </div>
      <div class="form-group">
        <textarea class="form-input" placeholder="Blog Text" type="text" row="20" id="blog-text"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">create</button>
      </div>
    </form>
  </div>
</div>
</div>
